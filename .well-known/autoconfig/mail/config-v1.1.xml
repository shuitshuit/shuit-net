<?xml version="1.0" encoding="UTF-8"?>
<clientConfig version="1.1">
    <emailProvider id="shuit.net">
        <domain>shuit.net</domain>

        <!-- 表示名 -->
        <displayName>Shuit.net Mail</displayName>
        <displayShortName>Shuit</displayShortName>

        <!-- 受信サーバー設定 (IMAP) -->
        <incomingServer type="imap">
            <hostname>tomatobeaver14.sakura.ne.jp</hostname>
            <port>993</port>
            <socketType>SSL</socketType>
            <authentication>password-cleartext</authentication>
            <username>%EMAILLOCALPART%@tomatobeaver14.sakura.ne.jp</username>
        </incomingServer>

        <!-- 送信サーバー設定 (SMTP) -->
        <outgoingServer type="smtp">
            <hostname>tomatobeaver14.sakura.ne.jp</hostname>
            <port>587</port>
            <socketType>STARTTLS</socketType>
            <authentication>password-cleartext</authentication>
            <username>%EMAILLOCALPART%@tomatobeaver14.sakura.ne.jp</username>
        </outgoingServer>
    </emailProvider>
    <emailProvider id="autoconfig.menpre.com">

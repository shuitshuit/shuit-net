            <hostname>tomatobeaver14.sakura.ne.jp</hostname>
            <port>995</port>
            <socketType>SSL</socketType>
            <authentication>password-cleartext</authentication>
            <username>%EMAILLOCALPART%@tomatobeaver14.sakura.ne.jp</username>
        </incomingServer>

        <!-- 送信サーバー設定 (SMTP) -->
        <outgoingServer type="smtp">
        <hostname>tomatobeaver14.sakura.ne.jp</hostname>
        <port>587</port>
        <socketType>STARTTLS</socketType>
        <authentication>password-cleartext</authentication>
        <username>%EMAILLOCALPART%@tomatobeaver14.sakura.ne.jp</username>
        </outgoingServer>
    </emailProvider>
</clientConfig>
